<!DOCTYPE html>
<html>
  <head>
    <title>Bilety</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>    
    <nav class="navbar navbar-default" role="navigation">  
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'Bilety', root_url, :class => 'navbar-brand' %>
        </div>        
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %> 
            <li class="user-title">Zalogowany jako <strong><%= current_user.email %></strong>.</li>
            <li>
              <%= link_to edit_user_registration_path, :action => 'go' do %>
                <span class="glyphicon glyphicon-edit"></span> Edytuj profil
              <% end %>
            </li> 
            <li>
              <%= link_to destroy_user_session_path, method: :delete, :action => 'go' do %>
                <span class="glyphicon glyphicon-log-out"></span> Wyloguj
              <% end %>
            </li> 
          <% else %>             
            <li>
              <%= link_to new_user_registration_path, :action => 'go' do %>
                <span class="glyphicon glyphicon-user"></span> Rejestracja
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, :action => 'go' do %>
                <span class="glyphicon glyphicon-log-in"></span> Logowanie
              <% end %>
            </li>            
          <% end %>
        </ul>
      </div>
    </nav>  
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>  
    <%= yield %>    
  </body>
</html>


