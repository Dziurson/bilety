<div class="container">
  <h1>Wszystkie wydarzenia</h1>

  <table class ="table table-hover">
    <thead>
      <tr>
        <th>Wykonawca</th>      
        <th>Data koncertu</th>      
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.artist, "/events/#{event.id}" %></td>        
          <td><%= event.event_date %></td>        
          <th colspan="3"></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to new_event_url, :class => "btn btn-primary",:action => 'go' do %>
    <span class="glyphicon glyphicon-plus"></span> Nowe Wydarzenie
  <% end %>
</div>
